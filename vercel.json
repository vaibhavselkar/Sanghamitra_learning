{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "server/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": 
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/app.js"
    }
  ]
}
