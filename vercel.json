{
  "version": 2,
  "builds": [
    {
      "src": "package.json",  // Now relative to the `frontend` folder
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "CI=false DISABLE_ESLINT_PLUGIN=true npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/build/index.html"  // Path now relative to `frontend`
    }
  ]
}
