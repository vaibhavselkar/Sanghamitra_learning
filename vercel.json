{
  "version": 2,
  "builds": [
    {
      "src": "package.json",  
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "CI=false DISABLE_ESLINT_PLUGIN=true npm run build"
      }
    },
    {
      "src": "server/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/app.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/build/static/$1"  
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html" 
    }
  ]
}
